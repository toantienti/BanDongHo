@model List<BanDongHo.Models.ProductCountViewModel>
@{
    ViewBag.Title = "Thống kê sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/Header_Menu.cshtml";
}

<!--Side bar bên phải-->
<div class="col-9 p-2 shadow-sm bg-white border border-2 ml-1" style="border-radius: 10px;margin-top: 64px;">
    <main>
        <div class="container-fluid px-4">
            <h4 style="color:red;">Thống kê sản phẩm</h4>
            
            <h5 style="color:orange;">Số lượng theo loại sản phẩm</h5>
            @foreach (var item in Model)
            {
                <div class="row">
                    <div class="col-xl-3 col-md-6">
                        <div class="card bg-primary text-white mb-4">
                            <div class="card-body">@item.CategoryName</div>
                            <div class="card-footer d-flex align-items-center justify-content-between">
                                <span class="small text-white">@item.ProductCount</span>
                                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </main>
</div>
<!--Side bar bên phải-->
